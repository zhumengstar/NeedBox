<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yaya.o2o.dao.ShopCategoryDao">
    <select id="queryShopCategory" resultType="com.yaya.o2o.entity.ShopCategory">
        SELECT
        shop_category_id,
        shop_category_name,
        shop_category_img,
        priority,
        create_time,
        parent_id
        FROM
        tb_shop_category
        <where>
            <if test="shopCategoryCondition.parent != null">
                and parent_id = #{shopCategoryConditon.parent.shopCategoryId}
            </if>
        </where>
        ORDER BY
        priority DESC
    </select>
</mapper>